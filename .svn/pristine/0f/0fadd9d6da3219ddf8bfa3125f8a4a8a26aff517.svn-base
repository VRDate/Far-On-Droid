<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <ListView
            android:background="@drawable/file_system_frame"
            android:layout_marginTop="10dp"
            android:paddingTop="20dp"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:overScrollMode="never"
            android:fadingEdge="none"
            android:cacheColorHint="@color/transparent"
            android:listSelector="@drawable/file_system_item_selector"
            android:id="@android:id/list"/>

    <ProgressBar
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"/>

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center">

        <TextView
                android:id="@+id/home_left"
                android:drawableRight="@drawable/home"
                android:background="@color/main_blue"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        <TextView
                android:id="@+id/network_left"
                android:drawableRight="@drawable/cloud"
                android:background="@color/main_blue"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        <TextView
                android:id="@+id/add_to_bookmarks_left"
                android:drawableLeft="@drawable/add_bookmark"
                android:background="@color/main_blue"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        <TextView
                android:id="@+id/change_folder_to_right"
                android:text="&lt;"
                android:layout_weight="0"
                android:textStyle="bold"
                android:background="@color/main_blue"
                android:visibility="gone"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        <TextView
                android:id="@+id/current_path"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:ellipsize="middle"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/file_system_path_selector"
                android:padding="3dp"
                android:gravity="center"
                android:singleLine="true"
                android:layout_gravity="center_horizontal"/>

        <TextView
                android:id="@+id/change_folder_to_left"
                android:text="&gt;"
                android:layout_weight="0"
                android:visibility="gone"
                android:textStyle="bold"
                android:background="@color/main_blue"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        <TextView
                android:id="@+id/add_to_bookmarks_right"
                android:drawableRight="@drawable/add_bookmark"
                android:background="@color/main_blue"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        <TextView
                android:id="@+id/network_right"
                android:drawableRight="@drawable/cloud"
                android:background="@color/main_blue"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        <TextView
                android:id="@+id/home_right"
                android:drawableRight="@drawable/home"
                android:background="@color/main_blue"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

    </LinearLayout>

</FrameLayout>