<resources>
    <style name="main_toolbar_button">
        <item name="android:background">@color/selected_item</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:minWidth">80dp</item>
    </style>

    <style name="dialog_button">
        <item name="android:background">@drawable/dialog_button_selector</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="Action_Dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Action_Dialog_Invert" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="PreferencesTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:background">@color/main_grey</item>
    </style>

    <style name="tips_font">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>