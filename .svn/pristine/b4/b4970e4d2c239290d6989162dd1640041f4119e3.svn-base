<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <ImageView
                    android:src="@drawable/icon_main"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/tips_first_page"
                    android:gravity="left|center_horizontal"
                    style="@style/tips_font"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <ImageView
                android:src="@drawable/archive"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="@string/tips_archive_page"
                android:gravity="left|center_horizontal"
                style="@style/tips_font"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>

    </LinearLayout>

    <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <ImageView
                android:src="@drawable/cloud_big"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="@string/tips_cloud_page"
                android:gravity="left|center_horizontal"
                style="@style/tips_font"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>

    </LinearLayout>


</LinearLayout>