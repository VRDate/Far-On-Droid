<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow android:id="@+id/date_period_after" android:paddingTop="4dp">

            <CheckBox
                android:id="@+id/date_after_enabled"
                android:layout_gravity="center_vertical"
                android:text="@string/date_after"
                android:button="@drawable/check_box_selector"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/date_after"
                style="@style/dialog_button_holder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

        </TableRow>

        <TableRow android:id="@+id/date_period_before" android:paddingTop="4dp">

            <CheckBox
                android:id="@+id/date_before_enabled"
                android:text="@string/date_before"
                android:button="@drawable/check_box_selector"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/date_before"
                style="@style/dialog_button_holder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

        </TableRow>

    </TableLayout>


</LinearLayout>